<div class="form-container">
    <form action="/admin/users/user/{{content.UserId}}/change_password" method="post">
        <div class="form-group">
            <label for="password">
                Contraseña
            </label>
            <input class="form-control" id="password" name="password" type="password" />
        </div>
        <div class="form-group">
            <label for="confirm-password">
                Confirmar contraseña
            </label>
            <input class="form-control" id="confirm-password" name="confirmPassword" type="password" />
            <div class="incorrect-data-container" id="password-incorrect"></div>
        </div>
        <div class="form-group">
            <input class="form-btn submit-btn" id="submit-user-btn" type="submit" value="Aceptar" />
        </div>
    </form>
</div>
<script src="/public/javascripts/usernameCheck.js"></script>
<script src="/public/javascripts/passwordCheck.js"></script>
