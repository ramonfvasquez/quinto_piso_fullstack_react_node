<div class="form-container">
    <form action="/admin/users/add" method="post">
    <div class="form-group">
        <label for="user-full-name">
            Nombre completo
        </label>
        <input class="form-control" id="user-full-name" name="userFullName" type="text" />
    </div>
    <div class="form-group">
        <label for="username">
            Nombre de usuario
        </label>
        <input class="form-control" id="username" name="username" type="text" />
        <div class="incorrect-data-container" id="username-incorrect"></div>
    </div>
    <div class="form-group">
        <label for="password">
            Contraseña
        </label>
        <input class="form-control" id="password" name="password" type="password" />
    </div>
    <div class="form-group">
        <label for="confirm-password">
            Confirmar contraseña
        </label>
        <input class="form-control" id="confirm-password" name="confirmPassword" type="password" />
        <div class="incorrect-data-container" id="password-incorrect"></div>
    </div>
    <div class="form-group">
        <input class="submit-btn" id="submit-user-btn" type="submit" value="Agregar" />
    </div>
    </form>
</div>
<script src="/public/javascripts/usernameCheck.js"></script>
<script src="/public/javascripts/passwordCheck.js"></script>